	for i=0,10 do
		local _x=-20+(i*16)+(t*0.2)%16
		sspr(0,32,16,16,_x,_y)
	end
	line(-5,_y+15,130,_y+15,3)
	line(-5,_y+17,130,_y+17,3)
end
